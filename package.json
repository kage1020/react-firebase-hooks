{
  "name": "@kage1020/react-firebase-hooks",
  "version": "0.1.2-canary.2",
  "description": "React Hooks for Firebase",
  "author": "kage1020",
  "license": "Apache-2.0",
  "homepage": "https://github.com/kage1020/react-firebase-hooks",
  "bugs": "https://github.com/kage1020/react-firebase-hooks/issues",
  "keywords": [
    "react",
    "hooks",
    "firebase"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./auth/*": {
      "types": "./dist/auth/*.d.ts",
      "import": "./dist/auth/*.js",
      "require": "./dist/auth/*.cjs"
    },
    "./firestore/*": {
      "types": "./dist/firestore/*.d.ts",
      "import": "./dist/firestore/*.js",
      "require": "./dist/firestore/*.cjs"
    },
    "./database/*": {
      "types": "./dist/database/*.d.ts",
      "import": "./dist/database/*.js",
      "require": "./dist/database/*.cjs"
    },
    "./functions/*": {
      "types": "./dist/functions/*.d.ts",
      "import": "./dist/functions/*.js",
      "require": "./dist/functions/*.cjs"
    },
    "./messaging/*": {
      "types": "./dist/messaging/*.d.ts",
      "import": "./dist/messaging/*.js",
      "require": "./dist/messaging/*.cjs"
    },
    "./storage/*": {
      "types": "./dist/storage/*.d.ts",
      "import": "./dist/storage/*.js",
      "require": "./dist/storage/*.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kage1020/react-firebase-hooks.git"
  },
  "scripts": {
    "build": "npm run clean && vite build",
    "clean": "rimraf ./dist",
    "dev": "npm run clean && vite build",
    "prepublish": "npm run build",
    "prettier": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "firebase emulators:exec --only firestore 'npx vitest run'",
    "test:watch": "vitest watch",
    "test:unit": "vitest run --exclude 'src/**/*.integration.test.*'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.3.12",
    "@vitest/coverage-v8": "^3.2.4",
    "firebase": "^12.3.0",
    "firebase-tools": "^14.17.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "firebase": ">= 9.0.0",
    "react": ">= 16.8.0"
  },
  "sideEffects": false
}
